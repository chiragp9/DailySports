@model IEnumerable<DailySports.DataLayer.Model.Stream>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h3 class="box-title">Streams List</h3>
                </div>
                <div class="box-header with-border">
                    <div class="alert alert-error">
                        To show Main Stream on Tournament Page, it's url needs to be in format: "http://player.twitch.tv/?channel={CHANNEL}".
                        Eg. if channel url is "http://www.twitch.tv/dotamajor" -> write "http://player.twitch.tv/?channel=dotamajor".
                        Main stream's url will NOT be shown in Streams section (left column).
                    </div>
                </div>
                <div class="box-body">
                    <div class="box-body table-responsive no-padding">
                        <table id="table" class="table table-hover tablesorter">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.URL)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.LanguageCode)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Main)
                                    </th>
                                    <th>
                                        Tournament Name
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                           <a href="@item.URL">Link</a>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LanguageCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Main)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Tournament.Title)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                        </td>
                                    </tr>
                                }

                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @Html.ActionLink("Create New", "Create")
        </div>
    </div>
</section>
<script type="text/javascript">
$(document).ready(function() 
    { 
        $("#table").tablesorter(); 
    } 
); 
</script>
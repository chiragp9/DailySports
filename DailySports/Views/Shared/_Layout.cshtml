@using DailySports.ServiceLayer.Dtos
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="#">
    <title>Daily Esports</title>
    <!-- Bootstrap core CSS -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/scripts")
    @Styles.Render("~/Content/css")
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="custom_nav navbar_bg">
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container-fluid container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="@Url.Action("Index","Home")"><img src="@Globals.CDNContent("Long-Logo.png")" alt="#"> </a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    @{UserDto user = new UserDto();
                        user = (UserDto)Session["LoggedInUser"];
                        UserDto user2 = new UserDto();
                        user2.Name = Response.Cookies["LoggedInUser"].Values["UserName"];
                    }
                    <ul class="nav navbar-nav">

                        @if (user == null && String.IsNullOrEmpty(user2.Name))
                        {
                            <li class="hvr-underline-from-left glyphicon glyphicon-log-in"><a href="@Url.Action("Login","Home")">Login</a></li>

                        }
                        else if (Session["LoggedInUser"] != null)
                        {
                            <li class="hvr-underline-from-left "><a> Welcome @user.Name </a> </li>

                            <li class="hvr-underline-from-left glyphicon glyphicon-log-out"><a href="@Url.Action("Logout","Home")">LogOut</a></li>
                        }

                        else if (Response.Cookies["LoggedInUser"].Values != null)
                        {
                            <li class="hvr-underline-from-left "><a> Welcome @user2.Name </a> </li>

                            <li class="hvr-underline-from-left glyphicon glyphicon-log-out"><a href="@Url.Action("Logout","Home")">LogOut</a></li>


                        }
                        <li class="hvr-underline-from-left"><a href="@Url.Action("Index","Home")">Latest</a></li>
                        <li class="hvr-underline-from-left"><a href="@Url.Action("Index","News")">News</a></li>
                        <li class="hvr-underline-from-left"><a href="@Url.Action("Index","Video")">Videos</a></li>
                        <li class="hvr-underline-from-left"><a href="@Url.Action("Index","Tournament")">Tournaments</a></li>
                        <li class="hvr-underline-from-left"><a href="@Url.Action("Index","Event")">Events</a></li>
                    </ul>
                </div>
            </div><!--/.container-fluid -->
        </nav>
    </div>
    <div>
        @RenderBody()
    </div>

    <div class="footer_area">
        <div class="container">
            <div class="col-sm-1 pad-zero">
                <img src="@Globals.CDNContent("footer_logo.png")" alt="#">
            </div>
            <div class="col-sm-3">
                <h4>Daily eSports,<br>All Rights Reserved.</h4>
            </div>
            <div class="col-sm-2 text-center">
                <h4><a href="@Url.Action("About","Home")">About</a> | <a href="@Url.Action("Hiring","Home")">Hiring</a> | <a href="@Url.Action("Contact","Home")">Contact</a></h4>
            </div>
            <div class="col-sm-6 pad-zero">
                <div class="footer_socials">
                    <a href="http://www.facebook.com/dailyesportstv" class="hvr-float"><img src="@Globals.CDNContent("facebook_ico.png")" alt=""></a>
                    <a href="http://www.twitter.com/dailyesportstv" class="hvr-float"><img src="@Globals.CDNContent("twitter_ico.png")" alt=""></a>
                    <a href="http://www.youtube.com/c/dailyesportstv" class="hvr-float"><img src="@Globals.CDNContent("youtube_ico.png")" alt=""></a>
                    <a href="http://www.instagram.com/dailyesports" class="hvr-float"><img src="@Globals.CDNContent("Instagram_ico.png")" alt=""></a>
                    <a href="http://www.twitch.tv/dailyesports" class="hvr-float"><img src="@Globals.CDNContent("Twitch_ico.png")" alt=""></a>
                    <a href="http://steamcommunity.com/groups/dailyesportstv" class="hvr-float"><img src="@Globals.CDNContent("steam_ico.png")" alt=""></a>
                    <a href="#" class="hvr-float"><img src="@Globals.CDNContent("Reddit_ico.png")" alt=""></a>
                </div>
            </div>
        </div>
    </div>
    <!-- Placed at the end of the document so the pages load faster -->

    <script>window.jQuery || document.write('<script src="@Globals.CDNContent("js/jquery.min.js")" ><\/script>')</script>

    <script type="text/javascript">
        jQuery(document).on('click', '.indi_active', function (e) {
            e.preventDefault();
            jQuery('.indi_active').removeClass('active');
            jQuery(this).addClass('active');
        });
    </script>
</body>
</html>